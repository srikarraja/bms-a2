{
"manifest_version": 2,
  "name": "BMS",
  "version": "2",

"browser_action": {
  "default_icon": "img/icon.png",
    "default_popup": "popup.html"
},
"content_scripts": [
    {
        "matches" : [
            "<all_urls>"
        ],
        "js" : [
            "js/search.js"
        ]
    }
],

 "permissions": [
     "<all_urls>","activeTab"
  ]


}
